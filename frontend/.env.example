# ========================================
# Effisio フロントエンド環境変数設定
# ========================================
# このファイルをコピーして .env.local を作成してください
# cp .env.example .env.local

# ========================================
# アプリケーション基本設定
# ========================================
NEXT_PUBLIC_APP_NAME="Effisio"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_DESCRIPTION="社内業務支援システム"

# ========================================
# API エンドポイント設定
# ========================================
# バックエンドAPIのベースURL
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1
# 本番環境: https://api.effisio.com/api/v1

# WebSocket URL（将来実装）
# NEXT_PUBLIC_WS_URL=ws://localhost:8080/ws

# ========================================
# 認証設定
# ========================================
# トークンの保存先
# localStorage, sessionStorage, cookie
NEXT_PUBLIC_TOKEN_STORAGE=localStorage

# トークンのキー名
NEXT_PUBLIC_ACCESS_TOKEN_KEY=effisio_access_token
NEXT_PUBLIC_REFRESH_TOKEN_KEY=effisio_refresh_token

# 自動ログアウト（ミリ秒）
NEXT_PUBLIC_AUTO_LOGOUT_TIME=3600000
# 1時間 = 3600000ミリ秒

# ========================================
# Next.js設定
# ========================================
# Next.jsの動作モード
NODE_ENV=development
# NODE_ENV: development, production

# ポート番号
PORT=3000

# ========================================
# APIリクエスト設定
# ========================================
# タイムアウト（ミリ秒）
NEXT_PUBLIC_API_TIMEOUT=30000
# 30秒 = 30000ミリ秒

# リトライ設定
NEXT_PUBLIC_API_RETRY_COUNT=3
NEXT_PUBLIC_API_RETRY_DELAY=1000
# 1秒 = 1000ミリ秒

# ========================================
# TanStack Query（React Query）設定
# ========================================
# キャッシュ時間（ミリ秒）
NEXT_PUBLIC_QUERY_STALE_TIME=300000
# 5分 = 300000ミリ秒

NEXT_PUBLIC_QUERY_CACHE_TIME=600000
# 10分 = 600000ミリ秒

# リフェッチ設定
NEXT_PUBLIC_QUERY_REFETCH_ON_WINDOW_FOCUS=true
NEXT_PUBLIC_QUERY_REFETCH_ON_RECONNECT=true

# ========================================
# ページネーション設定
# ========================================
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=20
NEXT_PUBLIC_MAX_PAGE_SIZE=100

# ========================================
# UI設定
# ========================================
# テーマ
NEXT_PUBLIC_DEFAULT_THEME=light
# light, dark, auto

# 言語
NEXT_PUBLIC_DEFAULT_LOCALE=ja
# ja, en

# 日付フォーマット
NEXT_PUBLIC_DATE_FORMAT=YYYY-MM-DD
NEXT_PUBLIC_DATETIME_FORMAT=YYYY-MM-DD HH:mm:ss

# ========================================
# ログ設定
# ========================================
NEXT_PUBLIC_LOG_LEVEL=info
# debug, info, warn, error

# コンソールログを有効化（開発環境のみ推奨）
NEXT_PUBLIC_ENABLE_CONSOLE_LOG=true

# ========================================
# アナリティクス設定（将来実装）
# ========================================
# Google Analytics
# NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# ========================================
# エラートラッキング設定（将来実装）
# ========================================
# Sentry
# NEXT_PUBLIC_SENTRY_DSN=https://xxx@sentry.io/xxx
# NEXT_PUBLIC_SENTRY_ENVIRONMENT=development

# ========================================
# 機能フラグ
# ========================================
# 開発中の機能を制御
NEXT_PUBLIC_FEATURE_NOTIFICATIONS=false
NEXT_PUBLIC_FEATURE_FILE_UPLOAD=false
NEXT_PUBLIC_FEATURE_REPORTS=false
NEXT_PUBLIC_FEATURE_EXPORT=false

# ========================================
# パフォーマンス設定
# ========================================
# 画像最適化
NEXT_PUBLIC_IMAGE_QUALITY=75
# 0-100

# 遅延読み込み
NEXT_PUBLIC_ENABLE_LAZY_LOADING=true

# ========================================
# セキュリティ設定
# ========================================
# CSP（Content Security Policy）
# NEXT_PUBLIC_CSP_POLICY="default-src 'self'"

# XSS対策
NEXT_PUBLIC_SANITIZE_HTML=true

# ========================================
# 開発ツール設定
# ========================================
# React DevTools
NEXT_PUBLIC_ENABLE_DEVTOOLS=true

# Redux DevTools（Zustand DevTools）
NEXT_PUBLIC_ENABLE_REDUX_DEVTOOLS=true

# ========================================
# ビルド設定
# ========================================
# ソースマップ生成（本番では false 推奨）
GENERATE_SOURCEMAP=true

# バンドル分析
ANALYZE=false

# ========================================
# 外部サービス連携（将来実装）
# ========================================
# AWS S3（ファイルアップロード用）
# NEXT_PUBLIC_AWS_S3_BUCKET=effisio-uploads
# NEXT_PUBLIC_AWS_REGION=ap-northeast-1

# CDN
# NEXT_PUBLIC_CDN_URL=https://cdn.effisio.com

# ========================================
# デバッグ設定
# ========================================
# デバッグモード（開発環境のみ）
NEXT_PUBLIC_DEBUG=false

# APIレスポンスをログに出力
NEXT_PUBLIC_LOG_API_RESPONSE=false

# ========================================
# テスト設定
# ========================================
# E2Eテスト用のベースURL
# NEXT_PUBLIC_E2E_BASE_URL=http://localhost:3000

# テスト用のモックデータ使用
# NEXT_PUBLIC_USE_MOCK_DATA=false
